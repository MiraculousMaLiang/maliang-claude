/* 首页样式 */

.container {
  padding: 20rpx;
  background-color: #F8F8F8;
}

/* 顶部欢迎信息 */
.header {
  background: linear-gradient(135deg, #FF9999 0%, #FFCCCC 100%);
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
  color: #fff;
}

.welcome-text {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.tips-text {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 孕期信息卡片 */
.pregnancy-card {
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.pregnancy-info {
  display: flex;
  justify-content: space-between;
}

.info-item {
  text-align: center;
  flex: 1;
}

.info-item .label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.info-item .value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 功能菜单 */
.menu-section {
  margin-bottom: 20rpx;
}

.menu-section van-grid {
  background-color: transparent;
}
