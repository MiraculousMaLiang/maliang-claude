<!--
  首页
  功能：展示孕产妇健康管理的主要功能入口
-->
<view class="container">
  <!-- 顶部欢迎信息 -->
  <view class="header">
    <view class="welcome-text">你好，{{userInfo.nickname || '孕妈妈'}}</view>
    <view class="tips-text">愿您和宝宝健康平安</view>
  </view>

  <!-- 孕期信息卡片 -->
  <view class="card pregnancy-card">
    <view class="card-title">孕期概况</view>
    <view class="pregnancy-info">
      <view class="info-item">
        <view class="label">当前孕周</view>
        <view class="value text-primary">{{pregnancyInfo.currentWeek || 0}}周</view>
      </view>
      <view class="info-item">
        <view class="label">预产期</view>
        <view class="value">{{pregnancyInfo.dueDate || '未设置'}}</view>
      </view>
      <view class="info-item">
        <view class="label">距离预产期</view>
        <view class="value">{{pregnancyInfo.daysLeft || 0}}天</view>
      </view>
    </view>
  </view>

  <!-- 功能菜单 -->
  <view class="menu-grid">
    <view class="menu-item" bindtap="navigateTo" data-url="/pages/checkup/checkup">
      <view class="menu-icon">📋</view>
      <view class="menu-text">产检记录</view>
    </view>
    <view class="menu-item" bindtap="navigateTo" data-url="/pages/vital-signs/vital-signs">
      <view class="menu-icon">💗</view>
      <view class="menu-text">体征记录</view>
    </view>
    <view class="menu-item" bindtap="navigateTo" data-url="/pages/diet/diet">
      <view class="menu-icon">🍎</view>
      <view class="menu-text">膳食记录</view>
    </view>
    <view class="menu-item" bindtap="navigateTo" data-url="/pages/exercise/exercise">
      <view class="menu-icon">🏃</view>
      <view class="menu-text">运动记录</view>
    </view>
    <view class="menu-item" bindtap="navigateTo" data-url="/pages/knowledge/knowledge">
      <view class="menu-icon">📚</view>
      <view class="menu-text">知识科普</view>
    </view>
    <view class="menu-item" bindtap="navigateTo" data-url="/pages/community/community">
      <view class="menu-icon">💬</view>
      <view class="menu-text">社区交流</view>
    </view>
    <view class="menu-item" bindtap="navigateTo" data-url="/pages/emergency/emergency">
      <view class="menu-icon">🚨</view>
      <view class="menu-text">紧急服务</view>
    </view>
    <view class="menu-item" bindtap="navigateTo" data-url="/pages/reminder/reminder">
      <view class="menu-icon">⏰</view>
      <view class="menu-text">提醒设置</view>
    </view>
  </view>

  <!-- 今日提醒 -->
  <view class="card">
    <view class="card-title">今日提醒</view>
    <view class="reminder-list" wx:if="{{reminders.length > 0}}">
      <view class="reminder-item" wx:for="{{reminders}}" wx:key="index">
        <view class="reminder-text">{{item.text}}</view>
        <view class="reminder-time">{{item.time}}</view>
      </view>
    </view>
    <view class="empty-text" wx:else>暂无提醒</view>
  </view>
</view>
