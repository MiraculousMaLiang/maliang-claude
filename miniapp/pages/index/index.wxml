<!--
  首页
  功能：展示孕产妇健康管理的主要功能入口
-->
<view class="container">
  <!-- 顶部欢迎信息 -->
  <view class="header">
    <view class="welcome-text">你好，{{userInfo.nickname || '孕妈妈'}}</view>
    <view class="tips-text">愿您和宝宝健康平安</view>
  </view>

  <!-- 孕期信息卡片 -->
  <view class="card pregnancy-card">
    <view class="card-title">孕期概况</view>
    <view class="pregnancy-info">
      <view class="info-item">
        <view class="label">当前孕周</view>
        <view class="value text-primary">{{pregnancyInfo.currentWeek || 0}}周</view>
      </view>
      <view class="info-item">
        <view class="label">预产期</view>
        <view class="value">{{pregnancyInfo.dueDate || '未设置'}}</view>
      </view>
      <view class="info-item">
        <view class="label">距离预产期</view>
        <view class="value">{{pregnancyInfo.daysLeft || 0}}天</view>
      </view>
    </view>
  </view>

  <!-- 功能菜单 -->
  <view class="menu-section">
    <van-grid column-num="4" border="{{false}}" gutter="20">
      <van-grid-item icon="description" text="产检记录" bindtap="navigateTo" data-url="/pages/checkup/checkup" />
      <van-grid-item icon="like-o" text="体征记录" bindtap="navigateTo" data-url="/pages/vital-signs/vital-signs" />
      <van-grid-item icon="tosend" text="膳食记录" bindtap="navigateTo" data-url="/pages/diet/diet" />
      <van-grid-item icon="idcard" text="运动记录" bindtap="navigateTo" data-url="/pages/exercise/exercise" />
      <van-grid-item icon="bookmark-o" text="知识科普" bindtap="navigateTo" data-url="/pages/knowledge/knowledge" />
      <van-grid-item icon="chat-o" text="社区交流" bindtap="navigateTo" data-url="/pages/community/community" />
      <van-grid-item icon="warning-o" text="紧急服务" bindtap="navigateTo" data-url="/pages/emergency/emergency" />
      <van-grid-item icon="clock-o" text="提醒设置" bindtap="navigateTo" data-url="/pages/reminder/reminder" />
    </van-grid>
  </view>

  <!-- 今日提醒 -->
  <view class="card">
    <view class="card-title">今日提醒</view>
    <van-cell-group wx:if="{{reminders.length > 0}}">
      <van-cell
        wx:for="{{reminders}}"
        wx:key="index"
        title="{{item.text}}"
        value="{{item.time}}"
        icon="clock-o"
      />
    </van-cell-group>
    <van-empty wx:else description="暂无提醒" />
  </view>
</view>
