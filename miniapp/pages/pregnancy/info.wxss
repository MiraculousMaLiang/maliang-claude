/**
 * 孕期信息页面样式
 */

.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

/* 孕期概览卡片 */
.pregnancy-overview {
  background: linear-gradient(135deg, #FF9999 0%, #FFB6B6 100%);
  border-radius: 20rpx;
  padding: 40rpx;
  color: white;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 153, 153, 0.3);
}

.overview-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.week-info {
  display: flex;
  align-items: baseline;
}

.week-number {
  font-size: 80rpx;
  font-weight: bold;
  line-height: 1;
}

.week-text {
  font-size: 32rpx;
  margin-left: 10rpx;
}

.day-text {
  font-size: 24rpx;
  margin-left: 10rpx;
  opacity: 0.9;
}

.status-tag {
  background-color: rgba(255, 255, 255, 0.3);
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
}

.overview-stats {
  display: flex;
  justify-content: space-around;
  margin-bottom: 30rpx;
  padding: 30rpx 0;
  border-top: 1rpx solid rgba(255, 255, 255, 0.3);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.3);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  line-height: 1.2;
}

.stat-label {
  font-size: 24rpx;
  margin-top: 10rpx;
  opacity: 0.9;
}

.overview-dates {
  display: flex;
  justify-content: space-around;
}

.date-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.date-label {
  font-size: 24rpx;
  opacity: 0.9;
  margin-bottom: 10rpx;
}

.date-value {
  font-size: 28rpx;
  font-weight: bold;
}

/* 操作按钮 */
.button-group {
  margin-top: 20rpx;
  padding: 0 20rpx;
}

/* 弹窗内容 */
.popup-content {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.popup-title {
  font-size: 32rpx;
  font-weight: bold;
}

.form-content {
  flex: 1;
  overflow-y: auto;
  padding: 20rpx 0;
}

.popup-footer {
  padding: 20rpx;
  border-top: 1rpx solid #eee;
  background-color: white;
}

/* 工具类 */
.mt-20 {
  margin-top: 20rpx;
}
