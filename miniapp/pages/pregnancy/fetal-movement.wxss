/**
 * 胎动记录页面样式
 */

.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 统计卡片 */
.statistics-card {
  background-color: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.date-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.stats-content {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 20rpx 0;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #FF9999;
  line-height: 1.2;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background-color: #eee;
}

.empty-stats {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 记录列表 */
.records-list {
  padding: 20rpx;
}

.record-item {
  background-color: white;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.time-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.time-text {
  font-size: 28rpx;
  color: #666;
  margin-left: 8rpx;
}

.record-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.record-detail {
  display: flex;
  align-items: center;
}

.record-detail .label {
  font-size: 28rpx;
  color: #666;
  width: 180rpx;
}

.record-detail .value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.record-notes {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #eee;
}

.notes-label {
  font-size: 26rpx;
  color: #999;
}

.notes-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 添加按钮 */
.add-button {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background-color: white;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 弹窗内容 */
.popup-content {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.popup-title {
  font-size: 32rpx;
  font-weight: bold;
}

.form-content {
  flex: 1;
  overflow-y: auto;
  padding: 20rpx 0;
}

.popup-footer {
  padding: 20rpx;
  border-top: 1rpx solid #eee;
  background-color: white;
}
