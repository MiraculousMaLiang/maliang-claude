<!--
  我的页面
  功能：展示用户信息和系统设置入口
-->
<view class="container">
  <!-- 用户信息卡片 -->
  <view class="user-card" bindtap="navigateTo" data-url="/pages/profile/profile">
    <view class="user-avatar">
      <image src="{{userInfo.avatar || '/assets/images/default-avatar.png'}}" mode="aspectFill"></image>
    </view>
    <view class="user-info">
      <view class="user-name">{{userInfo.nickname || '未设置昵称'}}</view>
      <view class="user-phone">{{userInfo.phone || ''}}</view>
    </view>
    <view class="arrow-icon">›</view>
  </view>

  <!-- 功能菜单 -->
  <view class="menu-list">
    <van-cell-group>
      <van-cell title="个人信息" icon="contact" is-link bindtap="navigateTo" data-url="/pages/profile/profile" />
      <van-cell title="健康档案" icon="records" is-link bindtap="navigateTo" data-url="/pages/user-profile/user-profile" />
      <van-cell title="紧急联系人" icon="phone-o" is-link bindtap="navigateTo" data-url="/pages/emergency-contact/emergency-contact" />
    </van-cell-group>

    <van-cell-group custom-class="mt-20">
      <van-cell title="孕期信息" icon="friends-o" is-link bindtap="navigateTo" data-url="/pages/pregnancy/pregnancy" />
      <van-cell title="提醒设置" icon="clock-o" is-link bindtap="navigateTo" data-url="/pages/reminder/reminder" />
    </van-cell-group>

    <van-cell-group custom-class="mt-20">
      <van-cell title="系统设置" icon="setting-o" is-link bindtap="navigateTo" data-url="/pages/setting/setting" />
      <van-cell title="关于我们" icon="info-o" is-link bindtap="navigateTo" data-url="/pages/about/about" />
    </van-cell-group>
  </view>

  <!-- 退出登录按钮 -->
  <view class="logout-section">
    <van-button
      type="default"
      block
      round
      bindtap="logout"
    >
      退出登录
    </van-button>
  </view>
</view>
