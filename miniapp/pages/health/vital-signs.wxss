/**
 * 体征监测页面样式
 */

.container {
  min-height: 100vh;
  background-color: #f7f8fa;
  padding: 20rpx;
  padding-bottom: 120rpx;
}

.latest-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.06);
}

.card-title {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.record-date {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.vital-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.vital-item {
  background: linear-gradient(135deg, #FFF5F8 0%, #FFFAFC 100%);
  border-radius: 12rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  border: 1rpx solid #FFE5EF;
}

.vital-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.vital-value {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  color: #333;
}

.vital-change {
  font-size: 22rpx;
  color: #FF6B9D;
}

.mt-20 {
  margin-top: 20rpx;
}

.records-list {
  padding: 20rpx;
}

.record-item {
  background-color: white;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.record-item .record-date {
  color: #333;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  padding-bottom: 12rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.vital-item-simple {
  color: #666;
  font-size: 26rpx;
  margin-bottom: 12rpx;
}

.add-button {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background-color: white;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.popup-content {
  display: flex;
  flex-direction: column;
  height: 100%;
  background-color: #ffffff;
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.popup-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.form-content {
  flex: 1;
  overflow-y: auto;
  padding: 20rpx 0;
  background-color: #f7f8fa;
}

.popup-footer {
  padding: 20rpx;
  border-top: 1rpx solid #f0f0f0;
  background-color: white;
}
